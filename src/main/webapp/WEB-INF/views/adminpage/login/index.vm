<body>



<div id="content">

    <div id="title">微信登陆后台</div>

    <hr />

    <div id="login">

        <form action="/login/index" method="post">

            USER:<input id="login_user" type="text" name="${loginName}" />

            <span class="login_span" />

            PASS:<input id="login_pass" type="password" name="${loginPass}"/>

            <span class="login_span" />

            <input id="login_button" type="submit" value="LOGIN" />
        </form>

    </div>

</div>




